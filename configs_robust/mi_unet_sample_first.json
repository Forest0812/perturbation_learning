  
{
  "model": {
      "model_dir":"mi_unet_sample_first",
      "type": "unet",
      "n_channels": 3,
      "n_classes": 36,
      "bilinear": true
  }, 
  "attack": {
      "type": "none"
  },

  "output_dir": "./robustness_experiments",

  "training": {
      "optimizer": "adam", 
      "epochs": 400, 
      "batch_size": 128,
      "step_size_schedule": [[0,160,400], [0, 0.01, 0]],
      "momentum": 0.9,
      "weight_decay": 0, 
      "log_interval": 2, 
      "checkpoint_interval": 50
  },

  "eval": {
      "batch_size": 128, 
      "sample_interval": 50, 
      "plot_segmentation": true
  },

  "dataset": {
      "type": "multi_illumination",
      "data_path": "../data/multi_illumination", 
      "mode": "first", 
      "split": "drylab", 
      "cropflip": {
          "pad": 10, 
          "crop": [125,187], 
          "flip": true
      }, 
      "mip": 5
  }, 

  "device": "cuda"
}